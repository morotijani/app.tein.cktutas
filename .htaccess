RewriteEngine on

RewriteRule ^blog/([0-9a-zA-Z]+)$ blog.php?type=$1 [NC,L]
RewriteRule ^blog/([0-9a-zA-Z_-]+)/([0-9a-zA-Z_-]+)$ blog.php?type=$1&status=$2 [NC,L]
RewriteRule ^blog/([0-9a-zA-Z_-]+)/([0-9a-zA-Z_-]+)/([0-9]+)$ blog.php?type=$1&status=$2&id=$3 [NC,L]
RewriteRule ^blog/([0-9a-zA-Z_-]+)/([0-9a-zA-Z_-]+)/([0-9]+)/([0-9]+)$ blog.php?type=$1&status=$2&id=$3&featured=$4 [NC,L]

RewriteCond %{REQUEST_FILENAME} !-d

RewriteCond %{REQUEST_FILENAME}\.php -f

RewriteRule ^(.*)$ $1.php

RewriteCond $1 !^(media|helpers|fonts|dist|news|controller|connection|robots\.txt)

RewriteRule ^([^\.]+)$ $1.php [NC,L]

#ErrorDocument 404 http://127.0.0.1/asteelu/404.html